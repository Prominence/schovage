---
import Layout from "../../layouts/Layout.astro";
import BucketCard from "../../components/bucket/BucketCard.astro";
import {getBuckets} from "../../services/bucketService";

const { request } = Astro;

const buckets = await getBuckets(request);
---


<Layout title="File Storage Management - Buckets">
    <div class="header">
        <h1 class="title">Buckets</h1>
        <a href={`/buckets/add`} class="add-button button">+ Add Bucket</a>
    </div>
    <div class="grid">
        {buckets.map(bucket => (
                <BucketCard bucket={bucket} />
        ))}
    </div>
</Layout>

<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    .title {
        font-size: 28px;
    }
    .add-button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .add-button:hover {
        background-color: #0056b3;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .button {
        text-decoration: none;
    }
</style>